<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="16dp"
    android:background="#E4E4E4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_cart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="#F1F1F1"
        android:src="@drawable/icon_keranjang"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_id_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cart"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        tools:text="ID Pesanan"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"/>

    <TextView
        android:id="@+id/tv_count_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_id_order"
        app:layout_constraintStart_toEndOf="@+id/iv_cart"
        android:layout_marginStart="16dp"
        tools:text="ID Pesanan"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:id="@+id/tv_price_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        tools:text="ID Pesanan"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_semibold"/>

    <TextView
        android:id="@+id/tv_status_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_order"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        tools:text="ID Pesanan"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>